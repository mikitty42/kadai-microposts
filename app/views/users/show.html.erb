<div class='row'>
    <aside class='col-xs-4'>
        <div class='panel panel-defult'>
            <div class='panel-heading'>
                <h3 class='panel-title'><%= @user.name %></h3>
            </div>
            <div class='panel-body'>
                <img class='meida-object img-rounded img-responsive' src='<%= gravatar_url(@user, { size: 500 }) %>'alt=''>
            </div>
        </div>
    </aside>
    <div class='col-xs-8'>
        <ul class='nav nav-tabs nav-justtified'>
            <li class='<%= 'active' if current_page?(user_path(@user)) %>'><%= link_to user_path(@user) do  %>Microposts<span class='badge'><%= @count_microposts %></span></li>
            <li><a href='#'>Followings</a></li>
            <li><a href='#'>Followers</a></li>
        </ul>
        <%= render 'microposts/microposts', microposts: @microposts %>
    </div>
</div>
