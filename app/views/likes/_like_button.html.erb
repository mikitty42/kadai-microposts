<% current_user.like?(micropost) %>
<%= form_for(current_micropost.likes.find_by(micropost_id: user.id), html: { method: :delete }) do |f| %>
<%= hidden_field_tag :micropost_id, user.id %>
<%= f.submit 'Unlike', class: 'btn btn-primary btn-block' %>
< % end %>
<% else %>
<%= form_for(current_micropost.likes.build) do |f| %>
<%= hidden_field_tag :micropost_id, user.id %>
<%= f.submit 'Like', class: 'btn btn-danger btn-block' %>
<% end %>
<% end %>

